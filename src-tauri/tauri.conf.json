{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Synnia",
  "version": "1.0.0",
  "identifier": "com.synnia.synnia",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm gen:types && pnpm dev",
    "beforeBuildCommand": "pnpm gen:types && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Synnia",
        "width": 1200,
        "height": 800,
        "label": "main",
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "center": true,
        "titleBarStyle": "Overlay",
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data: blob:",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$DESKTOP/**", "$HOME/**", "$DOCUMENT/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}